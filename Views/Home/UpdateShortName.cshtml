
@model UpdateShortName;
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
 <!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <style>
   .form-control {
       width: 25%;
    }
    .field-validation-valid
     {
         display: none;
     }
     .validation-summary-valid
     {
         display: none;
     }
    </style>
</head>
<body>

    @using (Html.BeginForm("UpdateShortName", "Home"))
    {
        <h3><strong>Update Corporate Alias</strong></h3>
        <div class="form-group">
            @Html.LabelFor(m => m.PolId)
            @Html.TextBoxFor(m => m.PolId, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.PolId, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.ProviderMasterEntityId)
            @Html.TextBoxFor(m => m.ProviderMasterEntityId, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.ProviderMasterEntityId, "ProviderMasterEntityId is required", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.OldShortName)
            @Html.TextBoxFor(m => m.OldShortName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.OldShortName, "", new { @class = "text-danger" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.NewShortName)
            @Html.TextBoxFor(m => m.NewShortName, new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.NewShortName, "", new { @class = "text-danger" })
        </div>

        <button type="submit" value="Submit" class="btn btn-primary">Submit</button>

        @if (Model != null && !string.IsNullOrEmpty(Model.Message))
        {
            <span id="message">@Html.DisplayFor(m => m.Message)</span>
        }
    }
</body>
</html>