@using AuthUtility.Constants
@model UpdateFromCMS;
@{
    Layout = "~/Views/Shared/_Layout.cshtml"; 
}
 <!DOCTYPE html>
 
<html>
<head>
    <meta name="viewport" content="width=device-width"/>
    <style>
   .form-control {
       width: 25%;
    }
    .field-validation-valid
     {
         display: none;
     }
     .validation-summary-valid
     {
         display: none;
     }
    textarea {
       width: 400px;
       height: 100px;
       display: block;
    }
    #StatusType{
        display: block;
    }
    .error {
            color: #a94442;
            display: none;
        }
    </style>
</head>
<body>
        
@using (Html.BeginForm("UpdateFromCMS","Home"))
{  
    <h3><strong>Update from CMS</strong></h3>
    <div class="form-group">
        @Html.LabelFor(m => m.TauIds)
        @Html.EditorFor(m => m.TauIds, new {@class = "form-control"})
        @Html.ValidationMessageFor(m=>m.TauIds, "TAU_ID is required", new { @class = "text-danger" })
    </div>    
    <div class="form-group">
        @Html.LabelFor(m => m.PolId)
        @Html.TextBoxFor(m => m.PolId, new {@class = "form-control"})
        @Html.ValidationMessageFor(m => m.PolId, "", new { @class = "text-danger" })
    </div>
     <div class="form-group" id="chkbx">
        @Html.LabelFor(m => m.UsernameFormat)
        <br>        
        @Html.RadioButtonFor(m => m.UsernameFormat, UtilityConstants.EmployeeCodeFormat) 
        @Html.Label("EmpCode@ShortName")
        <br>
        @Html.RadioButtonFor(m => m.UsernameFormat, UtilityConstants.OtherFormat) 
        @Html.Label("Other (Email Id should be correctly updated in CMS as well as in MediAuth)") 
        <br>
        <span class="error">Please select username format.</span>
    </div>
    <button type="submit" value="Submit" id="btnSubmit" class="btn btn-primary">Submit</button>
     @if (Model != null && !string.IsNullOrEmpty(Model.Message))
    {
      <span id="message">@Html.DisplayFor(m => m.Message)</span>
    } 
}
</body>
<script type="text/javascript">
$(function () {
            $("#btnSubmit").click(function () {
                var checked_radiobtn = $("#chkbx input[type=radio]:checked");
                if (checked_radiobtn.length == 0) {
                    $(".error").show();
                    return false;
                }
                return true;
            });
        });
</script>
</html>