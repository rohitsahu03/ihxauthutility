@model AuthenticationRequest;
@{
    Layout = null; 
}
<!DOCTYPE html>  
<html lang="en">  
<head>  
    <meta charset="utf-8">  
    <meta http-equiv="X-UA-Compatible" content="IE=edge">  
    <meta name="viewport" content="width=device-width, initial-scale=1">  

<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">  
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap-theme.min.css">  
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js"></script>  
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/js/bootstrap.min.js"></script>  
    <style>
        .panel{
            width: 270px;
        }
          .col-md-offset-3 {
           margin-left: 35%;
         }
         .input-group{
             margin-bottom: 10px;
         }
         .inputfields{
             padding: 3px;
         }
         #valid{
             display: none;            
         }
         #message,#valid{
             color: red;
             margin-left: 12%;
             font-size: 15px;
         }
         #btnSubmit{
             margin-left: -15px;
         }
         body  {
             background-image: url(../../images/loginpage_background.jpg);
             background-repeat:no-repeat;
             background-size:cover;
        }
    </style>
    <title>Sign In</title>  
</head>  
<body> 

    <div class="container">    
        <div id="loginbox" style="margin-top:150px;" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">                    
            <div class="panel panel-info" >
                    <div class="panel-heading">
                        <div class="panel-title">AuthUtility</div>                        
                    </div>   
                    <div class="panel-body" >
                            @using (Html.BeginForm("Authorize","Login", new { @class = "form-horizontal",@id= "loginform",@role="form"}))  
                           {      
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                @Html.TextBoxFor(model => model.UserName,new { placeholder = "Username",@class="inputfields",id="uname" })        
                            </div> 
                            <div class="input-group">
                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                @Html.PasswordFor(model => model.Password,new { placeholder = "Password" ,@class="inputfields",id="pwd" })     
                            </div>
                            <div style="margin-top:10px" class="form-group">
                                    <div class="col-sm-12 controls">
                                      <input id="btnSubmit" type="submit" value="Sign In" class="btn btn-primary" />  
                                       @if (Model != null && !string.IsNullOrEmpty(Model.Message))
                                       {
                                         <span id="message">@Html.DisplayFor(m => m.Message)</span>
                                       } 
                                       <span id="valid"></span>
                                    </div>
                            </div>
                           }  
                        </div>                     
                    </div>  
        </div>
    </div>
    </body>  
    <script type="text/javascript">       
      $(document).ready(function () {
          $('#valid').hide();
         // var url = new URL(location.href);
    // if(url.searchParams.get("ReturnUrl"))    
        //document.getElementById('ReturnUrl').value = url.searchParams.get("ReturnUrl");
     

            $("#btnSubmit").click(function () {
                if($('#uname').val() == '' || $('#uname').val()== null || $('#pwd').val()== null || $('#pwd').val()== '')
                {
                    $('#message').hide();
                    $('#valid').show().html('Invalid Credentials');
                    return false;
                }
                return true;
            });            
      });
    </script>
</html> 
    